<%- model_class = Entry -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <!--th><%= model_class.human_attribute_name(:id) %></th -->
      <th><%= model_class.human_attribute_name(:distance) %></th>
      <th><%= model_class.human_attribute_name(:time) %></th>
      <th><%= model_class.human_attribute_name(:location) %></th>
      <th><%= model_class.human_attribute_name(:description) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @entries.each do |entry| %>
      <tr class="row-<%= entry.description.downcase.split.join('_') %>">
        <!-- td><%= link_to entry.id, entry_path(entry) %></td -->
        <td><%= entry.distance %></td>
        <td><%= entry.time %></td>
        <td><%= entry.location %></td>
        <td><%= entry.description %></td>
        <td><%= humanize(Time.now - entry.created_at) %></td>
        <td>
          <% if user_signed_in? %>
            <% if current_user_is_creator_of_entry?(entry) %>
              <%= link_to t('.edit', :default => t("helpers.links.edit")),
                edit_entry_path(entry), :class => 'btn btn-mini' %>
              <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                entry_path(entry),
                :method => :delete,
                :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                :class => 'btn btn-mini btn-danger' %>
            <% end %>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
  new_entry_path,
  :class => 'btn btn-primary' %>
