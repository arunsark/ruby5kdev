<%- model_class = Entry -%>
<div class="page-header">
  <h4>Run a 5K with the following rubyists at RubyConfIndia 2013!</h4>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th></th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr class="row-<%= user.name.downcase.split.join('_') %>">
        <td><%= link_to gravatar_for(user), user_path(user) %></td>
        <td><%= link_to user.name, user_path(user) %></td>
      </tr>
    <% end %>
  </tbody>
</table>
